                  <MenuItem mnemonicParsing="false" onAction="#handlePoista" text="Poista profiili..." />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Apua">
            <items>
              <MenuItem mnemonicParsing="false" text="Apua" />
